{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "../dist-electron",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": [
    "*.ts"
  ]
} 